{
  "name": "nohponex/monolog-datadog-handler",
  "description": "Monolog Handler that uses Datadog",
  "type": "library",
  "keywords": [
    "DataDog",
    "PHP",
    "log",
    "logging"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Xenofon Spafaridis",
      "email": "nohponex@gmail.com",
      "homepage": "https://nohponex.gr"
    }
  ],
  "require": {
    "php": "^7.0",
    "datadog/php-datadogstatsd": "^1.0",
    "monolog/monolog": "^1.23"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Nohponex\\MonologDataDogHandler\\": "src"
    }
  },
  "scripts": {
    "lint": "php ./vendor/bin/phpcs -p -s --standard=PSR2 ./src"
  }}
